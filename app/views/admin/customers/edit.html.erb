<div class="container">
  <h3>
    <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
  </h3>
  <div class="row mt-5 mb-2">
    <span class="col-2">会員ID</span>
    <span class="col-2"><%= @customer.id %></span>
  </div>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
    <div class="row mb-2">
      <span class="col-2">氏名</span>
      <%= f.text_field :last_name, autocomplete: true, autofocus: true, class: "col-2" %>
      <%= f.text_field :first_name, autocomplete: true, class: "col-2 ml-5" %>
    </div>
    <div class="row mb-2">
      <span class="col-2">フリガナ</span>
      <%= f.text_field :last_name_kana, autocomplete: true, class: "col-2" %>
      <%= f.text_field :first_name_kana, autocomplete: true, class: "col-2 ml-5" %>
    </div>
    <div class="row mb-2">
      <span class="col-2">郵便番号</span>
      <%= f.text_field :postal_code, autocomplete: true, class: "col-2" %>
    </div>
    <div class="row mb-2">
      <span class="col-2">住所</span>
      <%= f.text_field :address, autocomplete: true, class: "col-6" %>
    </div>
    <div class="row mb-2">
      <span class="col-2">電話番号</span>
      <%= f.text_field :telephone_number, autocomplete: true, class: "col-2" %>
    </div>
    <div class="row mb-2">
      <span class="col-2">メールアドレス</span>
      <%= f.email_field :email, autocomplete: true, class: "col-2" %>
    </div>
    <div class="row mb-2">
      <span class="col-2">会員ステータス</span>
      <div class="col-1">
        <%= f.radio_button :is_deleated, "false", checked: true %>
        <%= f.label :is_deleated, "有効" %>
      </div>
      <div class="col-1">
        <%= f.radio_button :is_deleated, "true" %>
        <%= f.label :is_deleated, "退会" %>
      </div>
    </div>

    <div class="row">
      <%= f.submit "変更を保存", class: "offset-2 col-3 btn btn-success" %>
    </div>
  <% end %>
</div>