<div class="container">
  <h3>会員一覧</h3>
  <table class="table">
    <thead>
      <tr>
        <th>
          会員ID
        </th>
        <th>
          氏名
        </th>
        <th>
          メールアドレス
        </th>
        <th>
          ステータス
        </th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= customer.id %>
          </td>
          <td>
            <%= link_to admin_customer_path(customer.id) do %>
              <%= customer.last_name %><%= customer.first_name %>
            <% end %>
          </td>
          <td>
            <%= customer.email %>
          </td>
          <td>
            <% if customer.is_deleated == true %>
              <span class="text-secondary"><strong>退会</strong></span>
            <% else %>
              <span class="text-success"><strong>有効</strong></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row text-center">
    <%= paginate @customers %>
  </div>
</div>