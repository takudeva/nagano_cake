<div class="container">
  <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
  <div class="row mt-5">
    <span class="col-2">
      会員ID
    </span>
    <span class="col-10">
      <%= @customer.id %>
    </span>
  </div>
  <div class="row mt-2">
    <span class="col-2">
      氏名
    </span>
    <span class="col-10">
      <%= @customer.last_name %>　<%= @customer.first_name %>
    </span>
  </div>
  <div class="row mt-2">
    <span class="col-2">
      フリガナ
    </span>
    <span class="col-10">
      <%= @customer.last_name_kana %>　<%= @customer.first_name_kana %>
    </span>
  </div>
  <div class="row mt-2">
    <span class="col-2">
      郵便番号
    </span>
    <span class="col-10">
      <%= @customer.postal_code %>
    </span>
  </div>
  <div class="row mt-2">
    <span class="col-2">
      住所
    </span>
    <span class="col-10">
      <%= @customer.address %>
    </span>
  </div>
  <div class="row mt-2">
    <span class="col-2">
      電話番号
    </span>
    <span class="col-10">
      <%= @customer.telephone_number %>
    </span>
  </div>
  <div class="row mt-2">
    <span class="col-2">
      メールアドレス
    </span>
    <span class="col-10">
      <%= @customer.email %>
    </span>
  </div>
  <div class="row mt-2">
    <span class="col-2">
      会員ステータス
    </span>
    <span class="col-10">
      <% if @customer.is_deleated == true %>
        <span class="text-secondary"><strong>退会</strong></span>
      <% else %>
        <span class="text-success"><strong>有効</strong></span>
      <% end %>
    </span>
  </div>
  <div class="row mt-2">
    <span class="offset-2 col-2">
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
    </span>
    <span class="col-8">
      <%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-primary" %>
    </span>
  </div>
</div>