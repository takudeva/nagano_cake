<div class="container">
  <h3>商品詳細</h3>
  <div class="row">
    <div class="col-3">
      <%= image_tag @item.get_image(300,200), class: "img-fluid" %>
    </div>
    <div class="offset-1 col-8">
      <div class="row">
        <span class="col-4">
          商品名
        </span>
        <span class="col-8">
          <%= @item.name %>
        </span>
      </div>
      <div class="row my-3">
        <span class="col-4">
          商品説明
        </span>
        <span class="col-8">
          <%= @item.introduction %>
        </span>
      </div>
      <div class="row my-3">
        <span class="col-4">
          ジャンル
        </span>
        <span class="col-8">
          <%= @item.genre.name %>
        </span>
      </div>
      <div class="row my-3">
        <span class="col-4">
          税込価格(税抜価格)
        </span>
        <span class="col-8">
          <%= @item.add_tax_price.to_s(:delimited, delimiter: ',') %>
          (<%= @item.price.to_s(:delimited, delimiter: ',') %>)円
        </span>
      </div>
      <div class="row my-3">
        <span class="col-4">
          販売ステータス
        </span>
        <span class="col-8">
            <% if @item.is_sold_out == true %>
              <span class="text-secondary"><strong>販売停止中</strong></span>
            <% else %>
              <span class="text-success"><strong>販売中</strong></span>
            <% end %>
        </span>
      </div>
      <div class="row justify-content-center">
        <div class="col-6">
          <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>