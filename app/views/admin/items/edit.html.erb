<div class="container">
  <h3 class="new-item-registration-title ml-3">
    商品編集
  </h3>
  <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
    <div class="row mt-3 mb-1 justify-content-center form-group">
      <%= f.label :image, "商品画像", class: "form-label col-2 col-form-label" %>
      <%= f.file_field :image, accept: "image/*", class: "col-4" %>
    </div>
    <div class="row mb-1 justify-content-center form-group">
      <%= f.label :name, "商品名", class: "form-label col-2 col-form-label" %>
      <%= f.text_field :name, placeholder: "商品名", class: "form-control col-4" %>
    </div>
    <div class="row mb-1 justify-content-center form-group">
      <%= f.label :introduction, "商品説明", class: "form-label col-2 col-form-label" %>
      <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control col-4" %>
    </div>
    <div class="row mb-1 justify-content-center form-group">
      <%= f.label :genre_id, "ジャンル", class: "form-label col-2 col-form-label" %>
      <%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "-- 選択してください--"}, class: "form-select col-4") %>
    </div>
    <div class="row mb-1 justify-content-center form-group">
      <%= f.label :price, "税抜き価格", class: "form-label col-2 col-form-label" %>
      <%= f.number_field :price, class: "form-control col-4" %>円
    </div>
    <div class="row mb-1 justify-content-center form-group">
      <%= f.label :is_sold_out, "販売ステータス", class: "form-label col-2 col-form-label" %>
      <div class="col-2">
        <%= f.radio_button :is_sold_out, "false", checked: true %>
        <%= f.label :is_sold_out, "販売中" %>
      </div>
      <div class="col-2">
        <%= f.radio_button :is_sold_out, "true" %>
        <%= f.label :is_sold_out, "販売停止中" %>
      </div>
    </div>
    <div class="row mb-1 justify-content-center form-group">
      <%= f.submit "変更を保存", class: "btn btn-success col-2" %>
    </div>
  <% end %>

</div>