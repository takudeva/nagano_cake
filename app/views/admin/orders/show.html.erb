<div class="container">
  <div class="row">
    <div class="col-2">
      <span class="font-weight-bold">
        購入者
      </span>
    </div>
    <div class="col">
      <span>
        <%= @order.customer.last_name %> <%= @order.customer.first_name %>
      </span>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <span class="font-weight-bold">
        注文日
      </span>
    </div>
    <div class="col">
      <span>
        <%= I18n.localize @order.created_at, format: :long %>
      </span>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <span class="font-weight-bold">
        配送先
      </span>
    </div>
    <div class="col">
      <span>
        〒<%= @order.postal_code %> <%= @order.address %></br>
        <%= @order.name %>
      </span>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <span class="font-weight-bold">
        支払方法
      </span>
    </div>
    <div class="col">
      <span>
        <%= @order.method_of_payment_i18n %>
      </span>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <span class="font-weight-bold">
        注文ステータス
      </span>
    </div>
    <div class="col">
      <span>
        <%= form_with model: @order, url: order_status_admin_order_path(@order.id), class: "form-row" do |f| %>
          <%= f.select :status, Order.statuses_i18n.invert, class: "form-control" %>
          <%= f.submit "更新", class: "btn btn-success" %>
        <% end %>
      </span>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th class="col-2">商品名</th>
          <th class="col-1">単価(税込)</th>
          <th class="col-1">数量</th>
          <th class="col-1">小計</th>
          <th class="col-2">製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
          <tr>
            <td>
              <%= order_item.item.name %>
            </td>
            <td>
              <%= order_item.purchase_price.to_s(:delimited, delimiter: ",") %>
            </td>
            <td>
              <%= order_item.amount %>
            </td>
            <td>
              <%= order_item.subtotal.to_s(:delimited, delimiter: ",") %>
            </td>
            <td>
              <%= form_with model: order_item, url: admin_making_status_path(order_item.id), class: "form-row" do |f| %>
                <%= f.select :making_status, OrderItem.making_statuses_i18n.invert, class: "form-control" %>
                <%= f.submit "更新", class: "btn btn-success" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>