<div class="container">
  <div class="row">
    <div class="col-2">
      <span class="font-weight-bold">
        購入者
      </span>
    </div>
    <div class="col">
      <span>
        <%= @order.customer.last_name %> <%= @order.customer.first_name %>
      </span>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <span class="font-weight-bold">
        注文日
      </span>
    </div>
    <div class="col">
      <span>
        <%= I18n.localize @order.created_at, format: :long %>
      </span>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <span class="font-weight-bold">
        配送先
      </span>
    </div>
    <div class="col">
      <span>
        〒<%= @order.postal_code %> <%= @order.address %></br>
        <%= @order.name %>
      </span>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <span class="font-weight-bold">
        支払方法
      </span>
    </div>
    <div class="col">
      <span>
        <%= @order.method_of_payment_i18n %>
      </span>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <span class="font-weight-bold">
        注文ステータス
      </span>
    </div>
    <div class="col">
      <span>
        <%= form_with model: @order, url: admin_order_status_path(@order.id), class: "form-row" do |f| %>
          <%= f.select :status, Order.statuses_i18n.invert, class: "form-control" %>
          <%= f.submit "更新", class: "btn btn-success" %>
        <% end %>
      </span>
    </div>
  </div>
</div>