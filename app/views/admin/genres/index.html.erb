<div class="container">
  <h3>ジャンル一覧・追加</h3>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="row mt-3">
      <span class="font-weight-bold col-2 align-self-center">ジャンル名</span>
      <%= f.text_field :name, class: "col-3" %>
      <%= f.submit "新規登録", class: "btn btn-success offset-1 col-2" %>
    </div>
  <% end %>
  <div class="row col-4 mt-3">
  <table class="table">
    <thead>
      <tr>
        <th colspan="2">ジャンル</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td class="col-2">
          <%= genre.name %>
        </td>
        <td class="offset-2">
          <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>