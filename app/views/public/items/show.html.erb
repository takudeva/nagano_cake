<div class="container">
  <div class="row">

    <%= render 'public/items/genre', genres: @genres %>

    <div class="col-3">
      <%= image_tag @item.get_image(300,200), class: "img-fluid" %>
    </div>
    <div class="offset-1 col-5">
      <h3>
        <%= @item.name %>
      </h3>
      <p class="mt-1 mb-4">
        <%= @item.introduction %>
      </p>
      <p class="text-2">
        ¥<%= @item.add_tax_price.to_s(:delimited, delimiter: ',') %>
        <span class="text-1">(税込)</span>
      </p>
      <div class="row mt-3">
        <%= form_with model: @cart_item, url: cart_items_path do |f| %>
        <span class="col-4">
          販売ステータス
        </span>
        <span class="col-8">
            <% if @item.is_sold_out == true %>
              <span class="text-secondary"><strong>販売停止中</strong></span>
            <% else %>
              <span class="text-success"><strong>販売中</strong></span>
            <% end %>
        </span>
      </div>
      <div class="row justify-content-center">
        <div class="col-6">
          <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>