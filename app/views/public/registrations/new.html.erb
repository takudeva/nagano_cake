<div class="container">
  <h3 class="mt-5">新規会員登録</h3>
  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="row mt-3 mb-1">
      <span class="col-3">名前</span>
      <%= f.label :last_name, "(姓)", class: "form-label col-form-label" %>
      <%= f.text_field :last_name, autofocus: true, class: "form-control col-3" %>
      <%= f.label :first_name, "(名)", class: "form-label col-form-label" %>
      <%= f.text_field :first_name, class: "form-control col-3" %>
    </div>
    <div class="row mb-1">
      <span class="col-3">フリガナ</span>
      <%= f.label :last_name_kana, "(セイ)", class: "form-label col-form-label" %>
      <%= f.text_field :last_name_kana, class: "form-control col-3" %>
      <%= f.label :first_name_kana, "(メイ)", class: "form-label col-form-label" %>
      <%= f.text_field :first_name_kana, class: "form-control col-3" %>
    </div>
    <div class="row mb-1">
      <span class="col-3">メールアドレス</span>
      <span class="col-3">
        <%= f.email_field :email, class: "form-control" %>
      </span>
    </div>
    <div class="row mb-1">
      <span class="col-3">郵便番号(ハイフンなし)</span>
      <span class="col-3">
        <%= f.text_field :postal_code, class: "form-control" %>
      </span>
    </div>
    <div class="row mb-1">
      <span class="col-3">住所</span>
      <span class="col-6">
        <%= f.text_field :address, class: "form-control" %>
      </span>
    </div>
    <div class="row mb-1">
      <span class="col-3">電話番号(ハイフンなし)</span>
      <span class="col-3">
        <%= f.text_field :telephone_number, class: "form-control" %>
      </span>
    </div>
    <div class="row mb-1">
      <span class="col-3">パスワード(6文字以上)</span>
      <span class="col-3">
        <%= f.password_field :password, class: "form-control" %>
      </span>
    </div>
    <div class="row mb-1">
      <span class="col-3">パスワード(確認用)</span>
      <span class="col-3">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </span>
    </div>
    <div class="row mt-3 ml-2">
      <%= f.submit "新規登録", class: "btn btn-success offset-3 col-2" %>
    </div>
  <% end %>
  <h3 class="mt-3">既に登録済みの方</h3>
  <div class="row">
    <span class="ml-5">
      <%= link_to "こちら", new_customer_session_path %>
      からログインしてください
    </span>
  </div>
</div>

