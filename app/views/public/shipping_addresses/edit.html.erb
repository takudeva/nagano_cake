<div class="container">
  <h3>配送先編集</h3>
  <%= form_with model: @shipping_address, url: shipping_address_path(@shipping_address.id), method: :patch do |f| %>
    <%= f.hidden_field :customer_id, value: current_customer.id %>
    <div class="row mt-3 mb-1">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-3" %>
      <%= f.text_field :postal_code, autocomplete: true, class: "col-2" %>
    </div>
    <div class="row mb-1">
      <%= f.label :address, "住所", class: "col-3" %>
      <%= f.text_field :address, autocomplete: true, class: "col-6" %>
    </div>
    <div class="row mb-1">
      <%= f.label :name, "宛名", class: "col-3" %>
      <%= f.text_field :name, autocomplete: true, class: "col-2" %>
      <%= f.submit "変更内容を保存", class: "btn btn-success offset-4 col-2" %>
    </div>
  <% end %>
</div>