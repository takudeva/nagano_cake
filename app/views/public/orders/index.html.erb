<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <td>注文日</td>
        <td>配送先</td>
        <td>注文商品</td>
        <td>支払金額</td>
        <td>ステータス</td>
        <td>注文詳細</td>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= I18n.localize order.created_at, format: :day_only %>
          </td>
          <td>
            〒<%= order.postal_code %></br>
            <%= order.address %></br>
            <%= order.name %>
          </td>
          <td>
            <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %>
            <% end %>
          </td>
          <td>
            <%= number_to_currency(order.billing_amount) %>
          </td>
          <td>
            <%= order.status_i18n %>
          </td>
          <td>
            <%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>