<div class="container">
  <h3>注文情報確認</h3>
  <table class="table">
    <tr>
      <td>
        <table class="table table-bordered">
          <thead>
            <tr>
              <td>商品名</td>
              <td>単価(税込)</td>
              <td>数量</td>
              <td>小計</td>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
              <tr>
                <td>
                  <%= image_tag cart_item.item.get_image(100,50) %>
                  <%= cart_item.item.name %>
                </td>
                <td class="align-middle">
                  <%= cart_item.item.add_tax_price.to_s(:delimited, delimiter: ",") %>
                </td>
                <td class="align-middle">
                  <%= cart_item.amount %>
                </td>
                <td class="align-middle">
                  <%= cart_item.subtotal.to_s(:delimited, delimiter: ",") %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </td>
      <td>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td>送料</td>
              <td><%= @postage.to_s(:delimited, delimiter: ",") %></td>
            </tr>
            <tr>
              <td>商品合計</td>
              <td><%= @total.to_s(:delimited, delimiter: ",") %></td>
            </tr>
            <tr>
              <td>請求金額</td>
              <td><%= @billing_amount.to_s(:delimited, delimiter: ",") %></td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </table>
  <div class="row">
    <span><strong>支払方法</strong></span>
    <span class="ml-2">
      <%= @order.method_of_payment_i18n %>
    </span>
  </div>
  <div class="row">
    <span><strong>お届け先</strong></span>
    <% if params[:order][:select_address] == 0 %>
      <span class="ml-2">
        〒<%= @order.postal_code %> <%= @order.address %>
      </span>
      </br>
      <span><%= @order.name %></span>
    <% elsif params[:order][:select_address] == 1 %>
      <%= @shipping_address.address_display %>
    <% else %>
      <span class="ml-2">
        〒<%= @order.postal_code %> <%= @order.address %>
      </span>
      </br>
      <span><%= @order.name %></span>
    <% end %>
  </div>
</div>