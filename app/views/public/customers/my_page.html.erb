<div class="container">
  <h3 class="mb-5">マイページ</h3>
  <div class="row mb-3">
    <span class="font-weight-bold col-1 align-self-center">登録情報</span>
    <%= link_to "編集する", edit_customers_path, class: "btn btn-success col-1" %>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row my-3">
    <span class="font-weight-bold col-1 align-self-center">配送先</span>
    <%= link_to "一覧を見る", shipping_addresses_path, class: "btn btn-primary col-2" %>
  </div>
  <div class="row">
    <span class="font-weight-bold col-1 align-self-center">注文履歴</span>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary col-2" %>
  </div>
</div>
